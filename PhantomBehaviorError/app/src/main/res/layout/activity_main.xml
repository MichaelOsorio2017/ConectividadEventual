<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.stive.phantombehaviorerror.MainActivity"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">


    <TextView
        android:id="@+id/txtIntroduction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Introducction"
        android:layout_alignParentTop="true"
        android:textAlignment="inherit"
        />

    <TextView
        android:autoLink="web"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/antipattern"
        android:layout_below="@id/txtIntroduction"
        android:text="@string/antipattern"
        />


    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/antipattern"
        android:id="@+id/space" />

    <Button
        android:id="@+id/btnPhantomBehavior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/space"
        android:text="@string/completelyBlocked"
        android:textAlignment="center"
        android:background="@color/colorPhantomBehavior" />

    <RelativeLayout
        android:id="@+id/phantonBehaviorDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/btnPhantomBehavior"
        android:paddingTop="8dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/descriptionPhantom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/phantomBehaviorDescription" />

        <Button
            android:id="@+id/btnLivetest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/descriptionPhantom"
            android:text="Live test"
            android:textAlignment="center"
            android:layout_toStartOf="@id/space2"/>

        <Space
            android:id="@+id/space2"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/btnPhantomExamples"
            android:layout_below="@id/descriptionPhantom"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/btnPhantomExamples"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/descriptionPhantom"
            android:layout_toEndOf="@id/space2"
            android:text="See Examples"
            android:textAlignment="center" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phantonBehaviorDetail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        />

</RelativeLayout>
